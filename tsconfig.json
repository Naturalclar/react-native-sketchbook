{
  "compilerOptions": {
    /*BasicOptions*/
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2020"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "types": ["react-native"]
  },
  "include": ["src"],
  "exclude": ["**/*.stories.tsx"]
}
